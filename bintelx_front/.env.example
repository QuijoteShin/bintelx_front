# Application Configuration
APP_PORT=8080
APP_HOST=dev.local
APP_OPEN_URL=http://dev.local/
APP_PUBLIC_PATH=/

# Source Maps (source-map, inline-source-map, false)
APP_DEV_SOURCE_MAP=source-map
APP_PROD_SOURCE_MAP=false

# API Configuration
# Use relative URLs (e.g., /api) or absolute URLs (e.g., https://api.cifrid.com)
API_BASE_URL=/api
API_TIMEOUT=15000

# WebSocket (ChannelServer)
# Directo: ws://127.0.0.1:8000/  |  Proxied: wss://dev.local/ws/
WS_BASE_URL=ws://127.0.0.1:8000/

# Auth Endpoints
# Relative: /_demo/login or Absolute: https://auth.cifrid.com/login
AUTH_LOGIN_ENDPOINT=/_demo/login
AUTH_VALIDATE_ENDPOINT=/_demo/validate
AUTH_REPORT_ENDPOINT=/_demo/report
